<div class='pdfannotator_index'>
    <div class="row">
        <div class="toolbar" id="pdftoolbar" style="top:auto">
            <button class="cursor" type="button" title="Cursor" data-tooltype="cursor"><i class="fa fa-hand-pointer-o" aria-hidden="true"></i></button>
            
            <div class="spacer"></div>
            <button class="comment" type="button" title="{{# str }} point, pdfannotator {{/ str }}" data-tooltype="point">{{# pix }}pinbild,pdfannotator, {{# str }} point, pdfannotator {{/ str }} {{/ pix}}</button>
            <button class="pdfannotator_rectangle" type="button" title="{{# str }} rectangle, pdfannotator {{/ str }}" data-tooltype="area">{{# pix }}i/completion-manual-n,core, {{# str }} rectangle, pdfannotator {{/ str }} {{/ pix}}</button>
            <button class="pdfannotator_highlight" type="button" title="{{# str }} highlight, pdfannotator {{/ str }}" data-tooltype="highlight">{{# pix }}text_highlight_picker,pdfannotator, {{# str }} highlight, pdfannotator {{/ str }} {{/ pix}}</button>
            <button class="pdfannotator_strikeout" type="button" title="{{# str }} strikeout, pdfannotator {{/ str }}" data-tooltype="strikeout">{{# pix }}strikethrough,pdfannotator, {{# str }} strikeout, pdfannotator {{/ str }} {{/ pix}}</button>

            <div class="spacer"></div>

            <button class="text" type="button" title="{{# str }} text, pdfannotator {{/ str }}" data-tooltype="text">{{# pix }}text_color_picker,pdfannotator, {{# str }} text, pdfannotator {{/ str }} {{/ pix}}</button>
            <select class="text-size"></select>
            <div class="text-color"></div>

            <div class="spacer"></div>

            <button class="pen" type="button" title="{{# str }} drawing, pdfannotator {{/ str }}" data-tooltype="draw">{{# pix }}editstring,pdfannotator, {{# str }} drawing, pdfannotator {{/ str }} {{/ pix}}</button>
            <select class="pen-size"></select>
            <div class="pen-color"></div>

            <div class="spacer"></div>

            <select class="scale">
                <option value=".5">50%</option>
                <option value="1">100%</option>
                <option value="1.33">133%</option>
                <option value="1.5">150%</option>
                <option value="2">200%</option>
            </select>

            <!--<a href="javascript://" class="rotate-ccw" title="Rotate Counter Clockwise">⟲</a>-->
            <!--<a href="javascript://" class="rotate-cw" title="Rotate Clockwise">⟳</a>-->

            <div class="spacer"></div>

            <!--<a href="javascript://" class="clear" title="Clear"><img class="icon " alt="Clear" title="Clear" src="/moodle/theme/image.php/clean/core/1504678549/t/delete"></a>-->
            <a href="javascript://" class="hideComments" title="{{# str }} hideAnnotations, pdfannotator {{/ str }}"><img class="icon " alt="{{# str }} hideAnnotations, pdfannotator {{/ str }}" title="{{# str }} hideAnnotations, pdfannotator {{/ str }}" src={{{pixhide}}}></a><!--"/moodle/theme/image.php/clean/core/1504678549/e/accessibility_checker"-->
            <a href="javascript://" title="{{# str}}fullscreen,pdfannotator{{/str}}" onclick="makeFullScreen()">{{# pix}}fullscreen,pdfannotator,{{# str}}fullscreen,pdfannotator{{/str}}{{/ pix}}</a>
            <div class="spacer"></div>

            <span id="currentPage" title="{{# str }} currentPage, pdfannotator {{/ str }}">1</span>/<span id="sumPages" title="{{# str }} sumPages, pdfannotator {{/ str }}">1</span>

            <div class="spacer"></div>

            
        </div>
    </div>
    <div class="row-fluid row" id="body-wrapper">
    <div id="holder"></div>
        <div class="span8 col-md-8" id="content-wrapper">
            <div id="viewer" class="pdfViewer"></div>
        </div>
        <div class="span4 col-md-4" id="comment-wrapper">
            <h4>{{# str }} questionstitle, pdfannotator {{/ str }}</h4>
            <div class="comment-list">
                <div class="comment-list-container">
                    <!--<div class="comment-list-item">No comments</div>-->
                </div>
                <form class="comment-list-form" style="display:none;">
                    
                    <!--<input type="text" placeholder="Add a Comment"/>-->

                    <textarea id="myarea" placeholder="{{# str }} addAComment, pdfannotator {{/ str }}" cols="40" rows="3"></textarea>                 
                    <!--
                    <div class"row-fluid row comment-radio">
                            <div class="span4 col-md-4 comment-radio"><input type="radio" name="visibility" value="public" checked="checked" onclick="paintBlue();"/><span>{{# str }} public, pdfannotator {{/ str }}</span></div>
                            <div class="span4 col-md-4 comment-radio"><input type="radio" name="visibility" value="anonymous" onclick="paintCream();"/><span>{{# str }} anonymous, pdfannotator {{/ str }}</span></div>
                            <div class="span4 col-md-4 comment-radio"><input type="radio" name="visibility" value="private" onclick="paintLilac();"/><span>{{# str }} private, pdfannotator {{/ str }}</span></div>
                    </div>
                    -->
                    <div class"row-fluid row">
                        <input type="checkbox" name="visibility" value="anonymous" id="anonymousCheckbox" style="width:auto;"><label for="anonymousCheckbox">{{# str }} sendAnonymous, pdfannotator {{/ str }}</label>
                    </div>
                    <script>
                        function paintBlue() {
                            document.getElementById('commentSubmit').className = "owner";
                        }
                        function paintLilac() {
                            document.getElementById('commentSubmit').className = "private";
                        }
                        function paintCream() {
                            document.getElementById('commentSubmit').className = "anonymous";
                        }
                    </script>
                    
                    <input id="commentSubmit" class="owner" type="submit" value="{{# str }} answerButton, pdfannotator {{/ str }}">
                    <input id="commentCancel" class="owner" type="reset" value="{{# str }} cancelButton, pdfannotator {{/ str }}" >
                </form>
            </div>
        </div>
    </div>
</div>

