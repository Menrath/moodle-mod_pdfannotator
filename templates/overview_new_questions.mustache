
<div id='noquestions'>{{noquestions}}</div>

{{#annotators_with_questions}}

    <div class="panel-group">

        <div class="panel panel-default" id="questionpanel_{{annotatorid}}">

            <div class="panel-heading">
                <h4 class="panel-title">
                    <a id="questionlink_{{annotatorid}}" data-toggle="collapse" class="annotator questionlink" data-parent="#accordion2" href="#collapse2_{{annotatorid}}">
                        {{annotatorname}} ({{questioncount}}) <img id="dropdown2_{{annotatorid}}"  class="dropdown_image" src={{{pixcollapsed}}}>
                    </a>
                </h4>
            </div>

            <div id="collapse2_{{annotatorid}}" class="panel-collapse collapse" aria-expanded="false">
                <ul class="list-group zebra">

                    {{#questions}}

                        <li class="list-group-item q">
                            <div class="container-fluid">
                                <div class="row">
                                    <span class="col-lg-10 more">{{content}}</span>
                                    <span class="col-lg-2">
                                        <a href='{{{link}}}'>
                                            <img id="linkicon" title="{{#str}}gotoquestion, pdfannotator{{/str}}" src={{{pixgotox}}}>
                                        </a>
                                    </span><!--<img src='/moodle/pix/t/collapsed.png'>-->
                                </div>
                            </div>
                        </li>

                    {{/questions}}

                </ul>
            </div>

        </div>

    </div>

{{/annotators_with_questions}}
